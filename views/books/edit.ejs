<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Edit <%=book.title%></h1>
        <div>
            <form action="/books/<%=book._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=book.title%>" name="book[title]" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=book.author%>" name="book[author]" placeholder="Author">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" value="<%=book.price%>" name="book[price]" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=book.image%>" name="book[image]" placeholder="Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=book.description%>" name="book[description]" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            <a href="/books">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>